$TTL    604800 ; 1 week
@       IN      SOA     dns-primary.example.com. admin.example.com. (
                            2024042001      ; Serial (Date + Counter)
                            604800          ; Refresh
                            86400           ; Retry
                            2419200         ; Expire
                            604800 )        ; Negative Cache TTL

; Name Servers
@       IN      NS      dns-primary.example.com.
@       IN      NS      dns-secondary.example.com.

; Mail Exchanger (SMTP)
@       IN      MX      10 mail.example.com.

; Host Records
dns-primary     IN      A       192.168.56.10
dns-primary     IN      AAAA    fd00:cafe:beef::10
dns-secondary   IN      A       192.168.56.11
dns-secondary   IN      AAAA    fd00:cafe:beef::11
dhcp            IN      A       192.168.56.13
dhcp            IN      AAAA    fd00:cafe:beef::13

; SMTP Server (IP-SMTP / IPv6-SMTP)
mail            IN      A       192.168.56.12   ; A -> IP-SMTP
mail            IN      AAAA    fd00:cafe:beef::12 ; AAAA -> IPv6-SMTP

; SPF Record (Sender Policy Framework)
@       IN      TXT     "v=spf1 mx a:mail.example.com -all"

; DKIM Record (DomainKeys Identified Mail)
